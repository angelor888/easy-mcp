{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/cursor-mcp-config.json",
  "version": "2.3.0",
  "description": "Easy-MCP v2.3.0 - Cursor IDE專用配置 (2025年6月最新標準)",
  "security": {
    "oauth_resource_server": true,
    "resource_indicators_rfc8707": true,
    "structured_tool_output": true,
    "elicitation_support": true
  },
  "servers": {
    "mcp-filesystem": {
      "name": "Enhanced Filesystem Server",
      "description": "安全檔案系統存取 - 支援完整CRUD操作",
      "transport": {
        "type": "docker",
        "container": "easy-mcp-mcp-filesystem:latest",
        "port": 8082
      },
      "capabilities": {
        "resources": true,
        "tools": true,
        "prompts": false,
        "sampling": false
      },
      "security": {
        "allowed_paths": ["/workspace", "/projects"],
        "read_only": false,
        "permissions": ["read", "write", "create", "delete"]
      },
      "patterns": {
        "composable_tools": true,
        "error_handling": "structured",
        "retry_logic": "exponential_backoff"
      }
    },
    "mcp-memory": {
      "name": "Knowledge Graph Memory",
      "description": "知識圖譜記憶體系統 - 持久化語義記憶",
      "transport": {
        "type": "docker",
        "container": "easy-mcp-mcp-memory:latest", 
        "port": 8085
      },
      "capabilities": {
        "resources": true,
        "tools": true,
        "prompts": true,
        "sampling": false
      },
      "patterns": {
        "chain_of_tools": true,
        "parallel_processing": false,
        "caching": true
      },
      "data": {
        "persistence": true,
        "location": "/app/data/memory.json"
      }
    },
    "mcp-puppeteer": {
      "name": "Browser Automation Engine", 
      "description": "無頭瀏覽器自動化 - 網頁抓取與測試",
      "transport": {
        "type": "docker",
        "container": "easy-mcp-mcp-puppeteer:latest",
        "port": 8084
      },
      "capabilities": {
        "resources": false,
        "tools": true,
        "prompts": false,
        "sampling": false
      },
      "security": {
        "sandbox": true,
        "network_restrictions": true,
        "headless": true
      },
      "patterns": {
        "dispatcher": true,
        "validation": "strict"
      }
    },
    "mcp-everything": {
      "name": "Utility Toolkit",
      "description": "多功能工具集 - 測試與開發輔助",
      "transport": {
        "type": "docker", 
        "container": "easy-mcp-mcp-everything:latest",
        "port": 8086
      },
      "capabilities": {
        "resources": true,
        "tools": true,
        "prompts": true,
        "sampling": true
      },
      "configuration": {
        "demo_mode": false,
        "log_level": "warn",
        "metrics": false,
        "notification_interval": 300000
      },
      "patterns": {
        "composite_workflow": true,
        "all_patterns": true
      }
    }
  },
  "workflows": {
    "data_processing_chain": {
      "description": "資料處理工作流程鏈",
      "tools": ["dataFetch", "dataCleaner", "dataAnalyzer", "dataVisualizer"],
      "pattern": "chain_of_tools",
      "error_handling": "structured"
    },
    "parallel_analysis": {
      "description": "並行分析工作流程",
      "tools": ["statisticalAnalysis", "correlationAnalysis", "outlierDetection"],
      "pattern": "parallel_processing", 
      "timeout": 30000
    },
    "content_processing": {
      "description": "內容處理調度器",
      "dispatcher": "contentProcessor",
      "pattern": "dispatcher",
      "supported_types": ["text", "html", "markdown", "csv", "code"]
    }
  },
  "best_practices": {
    "security": {
      "oauth_2_1": true,
      "resource_indicators": true,
      "origin_validation": true,
      "https_required": false,
      "cors_policy": "localhost-only"
    },
    "error_handling": {
      "structured_responses": true,
      "retry_logic": true,
      "logging": true,
      "monitoring": true
    },
    "performance": {
      "caching": true,
      "connection_pooling": false,
      "async_operations": true,
      "batching": false
    },
    "development": {
      "type_hints": true,
      "documentation": true,
      "testing": true,
      "validation": true
    }
  },
  "tools": {
    "validation": {
      "input_validation": true,
      "schema_validation": true,
      "output_validation": true
    },
    "response_format": {
      "consistent_structure": true,
      "error_details": true,
      "success_status": true,
      "metadata": true
    }
  },
  "development": {
    "hot_reload": false,
    "debug_mode": false,
    "log_requests": true,
    "performance_monitoring": true
  },
  "deployment": {
    "environment": "development",
    "docker_compose": "docker-compose.yml",
    "health_checks": true,
    "auto_restart": true
  },
  "compatibility": {
    "mcp_version": "2025-06-18",
    "cursor_version": ">=0.40.0",
    "docker_version": ">=20.0.0",
    "platforms": ["windows", "linux", "macos"]
  },
  "documentation": {
    "readme": "README.md",
    "changelog": "docs/CHANGELOG.md",
    "best_practices": "docs/MCP-DOCKER-BEST-PRACTICES.md",
    "troubleshooting": "docs/WSL-Docker-修復指南.md"
  }
} 