{
  "_comment": "Easy-MCP Claude Desktop Configuration v2.4.0",
  "_version": "2.4.0",
  "_updated": "2025-06-29T22:16:41+08:00",
  "_description": "Professional MCP services configuration for Claude Desktop",
  
  "mcpServers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "exec", "-i", 
        "mcp-filesystem-enhanced",
        "node", "/app/dist/index.js"
      ]
    },
    "memory": {
      "command": "docker",
      "args": [
        "exec", "-i",
        "mcp-memory-enhanced", 
        "node", "/app/dist/index.js"
      ],
      "autoapprove": [
        "create_entities",
        "create_relations", 
        "add_observations",
        "delete_entities",
        "delete_observations",
        "delete_relations",
        "read_graph",
        "search_nodes",
        "open_nodes"
      ]
    },
    "puppeteer": {
      "command": "docker",
      "args": [
        "exec", "-i",
        "mcp-puppeteer-enhanced",
        "node", "/app/dist/index.js"
      ]
    },
    "everything": {
      "command": "docker", 
      "args": [
        "exec", "-i",
        "mcp-everything-enhanced",
        "node", "/app/dist/index.js"
      ]
    },
    "mcp-time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Asia/Taipei"]
    },
    "mcp-fetch": {
      "command": "uvx", 
      "args": ["mcp-server-fetch"]
    }
  },
  "globalShortcut": "Ctrl+Shift+.",
  "allowedOrigins": [
    "localhost:8080",
    "127.0.0.1:8080",
    "localhost:3000",
    "127.0.0.1:3000"
  ],
  "mcpSettings": {
    "timeout": 30000,
    "maxRetries": 3,
    "retryDelay": 1000,
    "logLevel": "info"
  }
} 