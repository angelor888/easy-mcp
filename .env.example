# MCP Services Environment Variables
# Copy this file to .env and update with your actual values

# Service Ports (change if you have conflicts)
FILESYSTEM_PORT=8082
PUPPETEER_PORT=8084
MEMORY_PORT=8085
EVERYTHING_PORT=8086

# Service Configuration
NODE_ENV=production
MCP_LOG_LEVEL=info

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Memory Service Configuration
MEMORY_FILE_PATH=/app/data/memory.json

# Docker Configuration
COMPOSE_PROJECT_NAME=easy-mcp
DOCKER_RESTART_POLICY=unless-stopped

# Security (optional - for production use)
# MCP_AUTH_TOKEN=your-auth-token-here
# MCP_ENABLE_HTTPS=false
